<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee    http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <resource-ref>
        <description>Concert database connection pool</description>
        <res-ref-name>hipDB</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
    <servlet>
        <servlet-name>HipServlet</servlet-name>
        <servlet-class>ru.hip_spb.servlet.AddConcertServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HipServlet</servlet-name>
        <url-pattern>/HipServlet</url-pattern>
    </servlet-mapping>
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Restricted Area</web-resource-name>
            <url-pattern>/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>hip_admin</role-name>
        </auth-constraint>
    </security-constraint>
    <login-config>
        <auth-method>BASIC</auth-method>
        <realm-name>JDBCRealm</realm-name>
    </login-config>
    <security-role>
        <role-name>hip_admin</role-name>
    </security-role>
</web-app>
